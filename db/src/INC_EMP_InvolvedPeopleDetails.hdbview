VIEW INC_EMP_InvolvedPeopleDetails AS
SELECT PD.IPLID, PD.INCID, PD.ROLET,  MD.TXVAL ROLET_TXT, PD.PERNM, PD.EMPID, PD.PHONE,PD.EMAIL, PD.SUPID,PD.SUPNM,
PD.UNQID, PD.ADDIF,PD.DEPNM, PD.POSIT, PD.MNGID, PD.MANGR, PD.EMADD, PD.EUNIT, PD.SUPML, PD.CNTRY, PD.OLICN,
PD.CSTM1,PD.CSTM2,PD.CSTM3,PD.CSTM4
FROM "INC_T_INVPL" PD
INNER JOIN "INC_T_INCDT" AS INC ON INC.INCID = PD.INCID AND INC.ISDEL = '0' AND PD.ISDEL = '0'
LEFT JOIN "INC_M_MSTDT" AS MD ON MD.UNQID = PD.ROLET AND MD.TYVAL='Role' AND MD.ISDEL='0'
WHERE PD.ISDEL='0';